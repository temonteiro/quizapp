<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:id="@+id/imagem_pergunta3"
        android:src="@drawable/linguagem"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pergunta3"
        android:text="@string/pergunta3"
        android:background="@color/background_floating_material_dark"
        android:textColor="#fff"
        android:layout_below="@id/imagem_pergunta3"
        android:layout_marginTop="15px"
        android:textSize="50px"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pergunta3"
        android:layout_marginTop="35px"
        android:id="@+id/pergunta3_resposta1"
        android:text="JavaScript"
        android:background="@color/button_material_light"
        android:textColor="@color/background_floating_material_dark"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pergunta3_resposta1"
        android:layout_marginTop="15px"
        android:id="@+id/pergunta3_resposta2"
        android:text="Java"
        android:background="@color/button_material_light"
        android:textColor="@color/background_floating_material_dark"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pergunta3_resposta2"
        android:layout_marginTop="15px"
        android:id="@+id/pergunta3_resposta3"
        android:text="C"
        android:background="@color/button_material_light"
        android:textColor="@color/background_floating_material_dark"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pergunta3_resposta3"
        android:layout_marginTop="15px"
        android:id="@+id/pergunta3_resposta4"
        android:text="PHP"
        android:background="@color/button_material_light"
        android:textColor="@color/background_floating_material_dark"/>

</LinearLayout>