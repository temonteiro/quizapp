<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:id="@+id/imagem_pergunta1"
        android:src="@drawable/computador"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pergunta1"
        android:text="@string/pergunta1"
        android:background="@color/background_floating_material_dark"
        android:textColor="#fff"
        android:layout_below="@id/imagem_pergunta1"
        android:layout_marginTop="15px"
        android:textSize="60px"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pergunta1"
        android:layout_marginTop="35px"
        android:id="@+id/resposta1"
        android:text="Stevie Jobs"
        android:background="@color/button_material_light"
        android:textColor="@color/background_floating_material_dark"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resposta1"
        android:layout_marginTop="15px"
        android:id="@+id/resposta2"
        android:text="Alan Turing"
        android:background="@color/button_material_light"
        android:textColor="@color/background_floating_material_dark"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resposta2"
        android:layout_marginTop="15px"
        android:id="@+id/resposta3"
        android:text="Bill Gates"
        android:background="@color/button_material_light"
        android:textColor="@color/background_floating_material_dark"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resposta3"
        android:layout_marginTop="15px"
        android:id="@+id/resposta4"
        android:text="Lady Gaga"
        android:background="@color/button_material_light"
        android:textColor="@color/background_floating_material_dark"/>

</RelativeLayout>